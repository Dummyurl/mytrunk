    <style name="Widget.DatePicker">

        <!-- item name="android:layout">@android:layout/date_picker</item -->
        <item name="dp_calendarViewShown">false</item>
    </style>

    <style name="Widget.Holo.DatePicker" parent="Widget.DatePicker">
        <item name="dp_internalLayout">@layout/date_picker_holo</item>
        <item name="dp_calendarViewShown">true</item>
    </style>

    <style name="Widget.Holo.Light.DatePicker" parent="Widget.Holo.DatePicker"></style>

    <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="Widget.CalendarView">
        <item name="cv_showWeekNumber">true</item>
        <item name="cv_firstDayOfWeek">1</item>
        <item name="cv_minDate">01/01/2016</item>
        <item name="cv_maxDate">12/31/2100</item>
        <item name="cv_shownWeekCount">6</item>
        <item name="cv_selectedWeekBackgroundColor">#330099FF</item>
        <item name="cv_focusedMonthDateColor">#FFFFFFFF</item>
        <item name="cv_unfocusedMonthDateColor">#66FFFFFF</item>
        <item name="cv_weekNumberColor">#33FFFFFF</item>
        <item name="cv_weekSeparatorLineColor">#19FFFFFF</item>
        <item name="cv_selectedDateVerticalBar">@drawable/day_picker_week_view_dayline_holo</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Small.CalendarViewWeekDayView</item>
        <item name="cv_dateTextAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Widget.Holo.CalendarView" parent="Widget.CalendarView">
        <item name="cv_selectedWeekBackgroundColor">#330099FF</item>
        <item name="cv_focusedMonthDateColor">#FFFFFFFF</item>
        <item name="cv_unfocusedMonthDateColor">#66FFFFFF</item>
        <item name="cv_weekNumberColor">#33FFFFFF</item>
        <item name="cv_weekSeparatorLineColor">#19FFFFFF</item>
        <item name="cv_selectedDateVerticalBar">@drawable/day_picker_week_view_dayline_holo</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Holo.CalendarViewWeekDayView</item>
        <item name="cv_dividerHorizontal">@drawable/list_divider_holo_dark</item>
    </style>

    <style name="Widget.Holo.Light.CalendarView" parent="Widget.CalendarView">
        <item name="cv_selectedWeekBackgroundColor">#330066ff</item>
        <item name="cv_focusedMonthDateColor">#FF000000</item>
        <item name="cv_unfocusedMonthDateColor">#7F08002B</item>
        <item name="cv_weekNumberColor">#7F080021</item>
        <item name="cv_weekSeparatorLineColor">#7F08002A</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Holo.Light.CalendarViewWeekDayView</item>
        <item name="cv_dividerHorizontal">@drawable/list_divider_holo_light</item>
    </style>

    <style name="TextAppearance.Small.CalendarViewWeekDayView" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Holo.CalendarViewWeekDayView" parent="TextAppearance.Small.CalendarViewWeekDayView">
        <item name="android:textColor">#505050</item>
    </style>

    <style name="TextAppearance.Holo.Light.CalendarViewWeekDayView" parent="TextAppearance.Small.CalendarViewWeekDayView"></style>

    <style name="companyDetailLay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="companyDetailTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">4</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="companyDetailCont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="popRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="popRelativeImg">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="popRelativeTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:textColor">@color/blue3</item>
    </style>

    <style name="popTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_Sixteen_Black_i">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_Sixteen_Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_twelve_darkGray">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 底部dialog 样式-->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">#E9E9E9</item>
    </style>


    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_menu_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_menu_out</item>
    </style>


    <style name="CitySelectStyle" parent="@android:style/Theme.Translucent">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>


    <style name="noAnimation" parent="android:Theme">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="checkGoodsButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:drawableRight">@drawable/white_down</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingRight">@dimen/dp_6</item>
        <item name="android:background">@drawable/bg_check_goods_button</item>


    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
    </style>


    <!--2019-->
    <!--基础样式，定义了转场动画和禁用actionbar,采用toolBar-->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/Style.Aty.Anim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="toolbarStyle">@style/Style.Aty.ActionBar</item>
    </style>
    <!--通用转场动画-->
    <style name="Style.Aty.Anim" parent="@android:style/Animation.Activity">
        <!--<item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/push_right_out</item>-->
    </style>
    <!--头部标题栏基础样式-->
    <style name="Style.Aty.ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <!--解决左边一直有一块边距的问题 contentInsetStart = 0 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

<!--2019-->
    <!-- PickDialog -->
    <style name="PickDialog" parent="@style/Animation.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="PickDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_menu_in</item>
        //进入时的动画
        <item name="android:windowExitAnimation">@anim/dialog_bottom_menu_out</item>
