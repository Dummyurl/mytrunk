<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RevisephoneActivity">

    <include layout="@layout/mytooler"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >


        <TextView
            style="@style/loginEditText"
            android:text="新手机号" />

        <EditText
            android:layout_weight="1"
            android:layout_height="44dp"
            android:paddingLeft="80dp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_login"
            android:layout_marginLeft="0dp"
            android:id="@+id/edit_new_phone"
            android:textColor="@color/darkgray"
            android:maxLength="11" />


        <!--<android.support.design.button.MaterialButton-->
        <!--android:id="@+id/btn_border"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:backgroundTint="@color/view_blue"-->
        <!--android:gravity="center"-->
        <!--android:text="修改"-->
        <!--android:textColor="@color/white"-->
        <!--app:cornerRadius="7dp"-->
        <!--app:icon="@drawable/ic_border"-->
        <!--app:iconTint="@color/white"-->
        <!--app:rippleColor="@color/colorAccent" />-->

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >


        <TextView
            style="@style/loginEditText"
            android:text="验证码" />

        <EditText
            android:layout_weight="1"
            android:layout_height="44dp"
            android:paddingLeft="80dp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_login"
            android:id="@+id/edit_reg_phonecheck"
            android:textColor="@color/darkgray"
            android:maxLength="6" />


        <android.support.design.button.MaterialButton
            android:id="@+id/btn_checkcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_5"
            android:backgroundTint="@color/view_blue"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            app:cornerRadius="7dp"
            app:iconTint="@color/white"
            app:rippleColor="@color/umeng_comm_lv_header_color4" />

    </RelativeLayout>


    <android.support.design.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/btn_phonecheck"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/view_blue"
        android:gravity="center"
        android:text="提交"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        app:icon="@drawable/ic_border"
        app:cornerRadius="7dp"
        app:iconTint="@color/white"
        app:rippleColor="@color/umeng_comm_lv_header_color4" />

</LinearLayout>