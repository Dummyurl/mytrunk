<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Wxautherization">

    <include
        android:id="@+id/include"
        layout="@layout/mytooler"></include>

    <ImageView
        android:id="@+id/img_second"
        android:layout_width="@dimen/dp_130"
        android:layout_height="131dp"
        android:layout_below="@+id/rela_first"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_launcher"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="&#12288;&#12288;亲爱的用户您好,欢迎来到货满车,请先授权微信登陆,方便您以后直接通过微信登陆,并免去忘记密码的麻烦.如果您的微信已绑定了其他的账号,请更换微信号后再进行绑定,为了您的财产安全,如果您退出登陆后，将重新绑定,给您带来不便，敬请原谅,祝您生意兴隆,财源广进。"
        android:textColor="@color/title_black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_second" />

    <Button
        android:id="@+id/btn_wxauther"
        android:layout_width="@dimen/dp_300"
        android:layout_height="48dp"
        android:layout_below="@+id/login_passlay"
        android:layout_marginTop="68dp"
        android:background="@drawable/blue_button"
        android:text="前往绑定"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="暂不绑定"
        android:textColor="@color/view_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_wxauther" />
</android.support.constraint.ConstraintLayout>