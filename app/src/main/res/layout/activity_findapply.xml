<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_found_return"
            android:src="@drawable/btn_return"
            android:layout_width="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_25" />


      <TextView
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_width="wrap_content"
          android:textColor="@color/white"
          android:text="申请列表"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp_18"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ryv_found_item"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_join_agree"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"
        android:gravity="center_horizontal"
        android:background="@drawable/blue_button"
        android:text="同意"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/activity_body_padding"
        android:layout_marginRight="@dimen/activity_body_padding"
        android:textSize="18sp" />

        <Button
            android:id="@+id/btn_join_decline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:background="@drawable/blue_button"
            android:text="拒绝"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/activity_body_padding"
            android:layout_marginRight="@dimen/activity_body_padding"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
