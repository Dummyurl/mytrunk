        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/driver_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:contentDescription="@string/apk_name"
            android:scaleType="centerCrop"
            android:src="@drawable/head_img"
            app:riv_oval="true" />


        <TextView
            android:layout_marginLeft="22dp"
            android:id="@+id/driver_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/driver_header"
            android:text="@string/apk_name"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/sum_of_money_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/driver_header"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/driver_header"
            android:layout_toLeftOf="@+id/driver_header"
            android:text="推广提成"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/sum_of_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/driver_header"
            android:layout_alignLeft="@+id/sum_of_money_s"
            android:text="0.00"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/driver_header"
           android:layout_alignRight="@+id/driver_header"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/qrcode" />

        <TextView
            android:layout_marginLeft="22dp"
            android:id="@+id/driver_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/driver_header"
            android:text="@string/apk_name"
            android:textColor="@color/black"
            android:textSize="21sp" />
    </RelativeLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"></LinearLayout>-->


    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/driver_check"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/user_check"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资料认证"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_password"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_info"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/information"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_account_rechange"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_dir_choose"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员充值"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorGray_g" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="1dp">

            <LinearLayout
                android:id="@+id/driver_binding_referrer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_bg1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"  >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_referrer" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorGray_5"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/binding_referrer"/>

                <TextView
                    android:id="@+id/txt_referrer_binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorLine" />
            <LinearLayout
                android:id="@+id/driver_bankcard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_bg1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mybankcard" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/mycard"
                    android:textColor="@color/colorGray_5"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/wx_binding"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_bg1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/umeng_socialize_wechat" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/wx_binding"
                    android:textColor="@color/colorGray_5"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_wx_binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_right" />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorLine" />


            <LinearLayout
                android:id="@+id/company_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_bg1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wx_accredit" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/data_companyinfo"
                    android:textColor="@color/colorGray_5"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorLine" />


