<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popu_style"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_8"
        android:padding="3dp">
        <TextView
            android:id="@+id/txt_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="乐清（1）"
            android:maxEms="6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textColor="@color/txt_blue"
            android:layout_centerVertical="true"
            android:background="@drawable/buttom_select"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray_bg"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"/>
        <ImageView
            android:id="@+id/img_driver"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:src="@drawable/group_contacts"
            android:padding="@dimen/dp_8"
            android:background="@drawable/buttom_select"/>

    </LinearLayout>

    <com.car.portal.view.drop.WaterDrop
        android:id="@+id/message_counts"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp" />
</RelativeLayout>
