<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/littleGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popu_style"
        android:padding="@dimen/dp_12"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15">


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_loading_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="廉江"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/turn_right"
            android:layout_marginLeft="@dimen/dp_10" />

        <TextView
            android:id="@+id/txt_target_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"/>


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                android:id="@+id/txt_unload_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-06-01"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/dp_5"/>


<LinearLayout
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/driver_list" />

    <TextView
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_5"
        android:id="@+id/txt_contacts_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:text="联系人"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/img_driver"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/car" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/txt_driver_name"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:text="王司机"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/img_pre"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/pre_money" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/txt_transport_cost"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:text="2000元"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />


</LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_remark"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/driver_remark" />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:id="@+id/txt_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
