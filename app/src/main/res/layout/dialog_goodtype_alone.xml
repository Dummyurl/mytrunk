                        android:layout_height="30dp"
                        android:background="@drawable/tv_sel"
                        android:button="@null"
                        android:gravity="center"
                        android:text="普货"
                        android:textColor="@color/darkgray"
                        android:textSize="17sp"
                        android:paddingTop="@dimen/dp_3"

