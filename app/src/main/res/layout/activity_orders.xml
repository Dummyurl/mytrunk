<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.car.portal.view.BaseTitleView
        android:id="@+id/base_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_no_one_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:lineSpacingExtra="@dimen/dp_3"
        android:padding="@dimen/dp_10"
        android:text="未查找到相关数据"
        android:textColor="@color/darkgray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/order_right_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="年份"
                android:textColor="@color/darkgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="1月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="2月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="3月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="4月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="5月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="6月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="7月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="8月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="9月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="10月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="11月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_gray_bg"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="12月"
                android:textColor="@color/darkgray"
                android:textStyle="bold" />
        </LinearLayout>

        <com.car.portal.view.HorizontalListView
            android:id="@+id/list_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </LinearLayout>

</LinearLayout>