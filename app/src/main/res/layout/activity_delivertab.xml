<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_deliver"
        app:tabIndicatorColor="@color/view_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>



    <com.car.portal.view.ChildViewPager
        android:id="@+id/tab_viewpage"
        android:layout_below="@+id/tab_deliver"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.car.portal.view.ChildViewPager>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/img_left_jt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:src="@drawable/left_jt" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/img_right_jt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:src="@drawable/right_jt" />
</RelativeLayout>