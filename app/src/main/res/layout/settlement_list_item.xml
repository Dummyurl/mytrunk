<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popu_style"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15">
    <TextView
        android:id="@+id/txt_lianxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联 系 人 :"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="？？"
        android:layout_toRightOf="@+id/txt_lianxi"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_settlement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结算"
        android:textColor="#83B74C"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yes"
        android:layout_toLeftOf="@+id/txt_settlement"
        android:layout_marginRight="@dimen/dp_5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_lianxi"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/dp_8"/>

    <TextView
        android:id="@+id/txt_siji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="司机姓名:"
        android:layout_below="@+id/txt_lianxi"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="？"
        android:layout_toRightOf="@+id/txt_siji"
        android:layout_alignBottom="@+id/txt_siji"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_mudidi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目的地:"
        android:layout_alignBottom="@+id/txt_siji"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_180"/>
    <TextView
        android:id="@+id/txt_target_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="？？"
        android:layout_toRightOf="@+id/txt_mudidi"
        android:layout_alignBottom="@+id/txt_mudidi"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/txt_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装货日期:"
        android:layout_below="@+id/txt_siji"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_loading_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="？？"
        android:layout_toRightOf="@+id/txt_riqi"
        android:layout_alignBottom="@+id/txt_riqi"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_suoyouren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有人:"
        android:layout_below="@+id/txt_siji"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_180"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_all_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="？"
        android:layout_toRightOf="@+id/txt_suoyouren"
        android:layout_alignBottom="@+id/txt_suoyouren"
        android:textColor="@color/black"/>
        </RelativeLayout>
</RelativeLayout>
