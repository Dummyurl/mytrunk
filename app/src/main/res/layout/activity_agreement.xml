<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    tools:context=".activity.AgreementActivity">

    <com.car.portal.view.QueryTitleView
        android:id="@+id/title_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.car.portal.view.QueryTitleView>

    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂未查询到相关数据！"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:padding="@dimen/dp_3"
        android:background="@color/blue1"
        android:layout_below="@+id/title_query"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/agreement_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_query"
        android:divider="@color/white"
        android:listSelector="@color/light_gray_bg"
        android:padding="@dimen/dp_15"
        android:scrollbars="none"></ListView>
</RelativeLayout>
