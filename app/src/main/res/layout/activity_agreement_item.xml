<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/littleGray"
    tools:context="com.car.portal.activity.AgreementItemActivity">
    <com.car.portal.view.BaseTitleView
        android:id="@+id/base_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.car.portal.view.BaseTitleView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/group_contacts"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户信息"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray_bg"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户姓名："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托方："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_manufactor_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="厂家联系："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/dp_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/card"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="司机信息"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray_bg"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>
                <TextView
                    android:id="@+id/txt_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="司机姓名："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_carrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="承运人："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_license_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驾驶证号："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_driver_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="司机电话："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_driver_moblie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="司机手机："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/dp_15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_15">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/cart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货物信息"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray_bg"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/txt_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物名称："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/txt_all_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总件数："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_cross_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="过路支付："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_all_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全程运费："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_advance_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预付运费："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_default_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚欠运费："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价值："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/txt_starting_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起运地点："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_target_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起运日期："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_arrive_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达日期："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/dp_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/note"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同信息"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray_bg"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>
                <TextView
                    android:id="@+id/txt_handler_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理人员："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_agreement_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同日期："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_message_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信息费："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_Accommodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住宿费："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_court"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同法院："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/txt_contracting_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签约地点："
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@color/light_gray"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
