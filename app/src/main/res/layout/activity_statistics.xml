<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.car.portal.activity.StatisticsActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/mytooler"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/dp_20"/>

    <RelativeLayout
        android:id="@+id/line_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_title_view"
        android:padding="@dimen/dp_10">
        <ImageView
            android:id="@+id/img_order"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/note"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单管理"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/img_order"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/line_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_title_view"
        android:padding="@dimen/dp_10">
        <ImageView
            android:id="@+id/img_money"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pre_money"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/img_money"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/line_center_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_title_view"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_center_money"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提成金额确认"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_center_money"
            android:layout_marginLeft="@dimen/dp_15"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/line_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_title_view"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/img_phone"
            android:text="电话"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/line_inter_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_title_view"
        android:padding="@dimen/dp_10">
        <ImageView
            android:id="@+id/img_inter_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/internet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络电话"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_inter_phone"
            android:layout_marginLeft="@dimen/dp_15"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>
