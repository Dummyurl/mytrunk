<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!--<com.car.portal.view.BaseTitleView-->
        <!--android:id="@+id/about_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <include layout="@layout/mytooler"></include>
    <!--
         <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_15" >

        <TextView
            android:id="@+id/about_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/apk_name"
            android:textColor="@color/blue3"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/about_title_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/about_top"
            android:text="@string/about_headtip"
            android:textColor="@color/darkgray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_versionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:layout_below="@id/about_title_tip"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/dp_3"
            android:layout_below="@id/about_versionInfo"
            android:text="@string/about_content"
            android:textColor="@color/darkgray"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_content"
            android:layout_marginTop="@dimen/dp_25">

            <TextView
                android:id="@+id/about_link_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/about_connect_head"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/about_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/about_link_title"
                android:autoLink="phone"
                android:text="@string/about_phone"
                android:textColor="@color/blue3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/about_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_phone"
                android:layout_toRightOf="@id/about_link_title"
                android:autoLink="phone"
                android:text="@string/about_tel"
                android:textColor="@color/blue3" />

            <TextView
                android:gravity="right"
                android:id="@+id/about_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toRightOf="@id/about_tel"
                android:autoLink="web"
                android:text="@string/about_web"
                android:textColor="@color/blue3" />


            <Button
                android:id="@+id/inviterCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/blue_button"
                android:text="获取注册邀请码"
                android:textColor="@color/white"
                android:visibility="gone" />
            <TextView
                android:gravity="center_horizontal"
                android:layout_below="@+id/about_web"
                android:id="@+id/about_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/about_code"
                android:textColor="@color/darkgray"
                android:textSize="10sp" />

            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_right"
                android:textColor="@color/darkgray"
                android:layout_below="@+id/about_bottom"
                android:textSize="10sp" />
        </RelativeLayout>



    </RelativeLayout>
    </ScrollView>
    <!-- </ScrollView> -->

</LinearLayout>