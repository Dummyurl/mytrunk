<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_est">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">
            <ImageView
                android:id="@+id/img_lianxiren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/agreement_note"/>

            <LinearLayout
                android:id="@+id/line_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_lianxiren"
                android:layout_alignTop="@+id/img_lianxiren"
                android:layout_alignBottom="@+id/img_lianxiren"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_lianxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="司机："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_16"/>

                    <TextView
                        android:id="@+id/txt_contacts_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="？？"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_16"
                        android:text="货主："/>

                    <TextView
                        android:id="@+id/txt_boss_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:text="？？"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_below="@+id/line_top"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
        <TextView
            android:id="@+id/txt_mudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/line_top"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/txt_target_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆"
            android:maxEms="7"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/txt_mudi"
            android:layout_alignBottom="@+id/txt_mudi"
            android:layout_marginLeft="@dimen/dp_5"/>

        <TextView
            android:id="@+id/txt_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/line_top"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignBottom="@+id/txt_mudi"
            android:layout_marginLeft="@dimen/dp_200"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-10"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/txt_riqi"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/txt_riqi"
            android:layout_marginLeft="@dimen/dp_5"/>

        <TextView
            android:id="@+id/txt_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提成金额基数"
            android:textSize="@dimen/sp_16"
            android:layout_alignLeft="@+id/txt_mudi"
            android:layout_below="@+id/txt_riqi"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.0"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignBottom="@+id/txt_jine"
            android:layout_toRightOf="@+id/txt_jine"/>

        <ImageView
            android:id="@+id/img_isinvaild"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/already_void"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_below="@+id/txt_money"
            android:layout_marginTop="@dimen/dp_10"/>
    </RelativeLayout>
</RelativeLayout>
