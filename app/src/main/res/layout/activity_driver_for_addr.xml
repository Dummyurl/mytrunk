<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layth"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <RelativeLayout
            android:id="@+id/rela_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/group_contacts"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_contacts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="梁增"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/img_photo"/>

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="30dp"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"/>

            <View
                android:id="@+id/view_split1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_bg"
                android:layout_below="@+id/img_photo"
                android:layout_marginTop="@dimen/dp_10"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/line_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_title"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/txt_unloading_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下货地点"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/txt_blue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" —— "
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/txt_blue"/>

            <TextView
                android:id="@+id/txt_target_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目的地"
                android:maxEms="10"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/txt_blue"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_car_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车长12米"
            android:textColor="@color/darkgray"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_below="@+id/line_point"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="-8dp"/>

        <TextView
            android:id="@+id/txt_instop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否在停车场"
            android:textColor="@color/darkgray"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_below="@+id/line_point"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/txt_car_length"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="-8dp"/>

        <LinearLayout
            android:id="@+id/line_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_below="@+id/txt_car_length">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_5"/>
            <TextView
                android:id="@+id/txt_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_arrive_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到达日期"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:layout_below="@+id/line_remark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_below="@+id/txt_arrive_date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
