<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.car.portal.activity.AddDriverInfoActivity">
    <com.car.portal.view.BaseTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/base_title_view"></com.car.portal.view.BaseTitleView>
    <LinearLayout
        android:id="@+id/line_main_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/base_title_view">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="主车车牌"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_mian_num"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_trailer_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/line_main_num">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="挂车车牌"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_trailer_num"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_car_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/line_trailer_num">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="车长"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_car_length1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_car_length2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="米"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_car_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/line_car_length">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="车宽"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_car_width1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_car_width2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="米"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_car_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/line_car_width">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="车高"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_height"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="米"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@drawable/edittext_login"
        android:layout_below="@+id/line_car_height">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:text="载重"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_load"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="吨"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_car_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line_load"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="车箱类型"
            android:layout_gravity="center_vertical"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/txt_car_type"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/dp_30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:background="@drawable/popu_blue_style"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_axis_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line_car_type"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="轴数"
            android:layout_gravity="center_vertical"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/txt_axis_count"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/dp_30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:background="@drawable/popu_blue_style"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_operationor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line_axis_count"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="操作员"
            android:layout_gravity="center_vertical"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/txt_operationor"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/dp_30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:background="@drawable/popu_blue_style"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/blue_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/line_operationor"
        android:layout_marginBottom="@dimen/dp_30"/>
</RelativeLayout>
