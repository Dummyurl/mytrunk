<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装卸方式"
                android:textSize="@dimen/dp_15"
                android:textColor="#000000"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5" />
            <!-- 装卸方式 -->
            <com.car.portal.view.MyRadioGroup
                android:id="@+id/loadingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <RadioButton
                    android:id="@+id/loadingType1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="一装一卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    />

                <RadioButton
                    android:id="@+id/loadingType2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="一装两卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/loadingType3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="一装多卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/loadingType4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="两装一卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />
                <RadioButton
                    android:id="@+id/loadingType5"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="两装两卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginTop="@dimen/dp_5"
                    />

                <RadioButton
                    android:id="@+id/loadingType6"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="两装多卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    />

                <RadioButton
                    android:id="@+id/loadingType7"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="多装多卸"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </com.car.portal.view.MyRadioGroup>


            <!--付款方式-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式"
                android:textSize="@dimen/dp_15"
                android:textColor="#000000"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                />

            <RadioGroup
                android:id="@+id/payType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/payType1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全现金"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/payType2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="需回单"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />
                <RadioButton
                    android:id="@+id/payType3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="三段付"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />
                <RadioButton
                    android:id="@+id/payType4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="到付"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingBottom="@dimen/dp_8">

                <!--备注-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="用车类型"
                    android:textSize="@dimen/dp_15"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    />

                <EditText
                    android:id="@+id/remark_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="限五十字"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColorHint="#000000"
                    android:textSize="@dimen/sp_17"
                    android:maxLength="50"
                    />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/remarkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5">

                <RadioButton
                    android:id="@+id/remarkType1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="三不超"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    />

                <RadioButton
                    android:id="@+id/remarkType2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="高价急走"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"

                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/remarkType3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="需要雨布"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/remarkType4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tv_sel"
                    android:button="@null"
                    android:gravity="center"
                    android:text="货物重量为估算"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/choose_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="确定"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/blue_button"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>