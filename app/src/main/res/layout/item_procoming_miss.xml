<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/promot_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_bottom_only"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="14dp">


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/procommiss_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:id="@+id/promot_status"
                android:layout_gravity="center"
                android:text="@string/promot_status_false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/promot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginRight="@dimen/dp_8"
                    android:textColor="@color/title_black"
                    android:text="小明"/>
                <TextView
                    android:id="@+id/promot_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promot_tel"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/promot_company"
                android:textSize="@dimen/sp_16"
                android:text="@string/promot_company"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/promot_citys"
                android:textSize="@dimen/sp_16"
                android:text="@string/promot_citys"/>

            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/promot_time"
                android:gravity="right"
                android:textColor="@color/gray"
                android:text="@string/promot_time"/>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/littleGray"></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:id="@+id/promot_money"
            android:text="@string/promot_money"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/red"
            />
        <!--<CheckBox-->
            <!--android:id="@+id/promot_state"-->
            <!--android:clickable="false"-->
            <!--android:layout_marginTop="@dimen/dp_20"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginRight="14dp"-->
            <!--android:layout_marginLeft="14dp"-->
            <!--android:layout_gravity="center|right"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:background="@null"-->
            <!--android:button="@null"-->
            <!--android:drawableLeft="@drawable/unchecked"-->
            <!--android:visibility="visible"-->
            <!--/>-->
          <CheckBox
              android:id="@+id/promot_state"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:visibility="gone"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              />
        <!--<TextView-->
            <!--android:id="@+id/promot_state"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="@drawable/icon_unchecked"-->
            <!--android:layout_width="@dimen/dp_20"-->
            <!--android:layout_marginTop="@dimen/dp_20"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_height="@dimen/dp_20" />-->
    </LinearLayout>

</LinearLayout>

