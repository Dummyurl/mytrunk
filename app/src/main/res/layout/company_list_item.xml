<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/apk_name"
        android:scaleType="centerInside"
        android:src="@drawable/company2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:text="@string/confirm_upload"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tip_user_reg"
            android:textColor="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/company_detail"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/apk_name"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/heart_gray" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:contentDescription="@string/apk_name"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/detail2" />

</LinearLayout>